#!/usr/bin/env ruby

target = File.expand_path(ARGV.first)

if RUBY_PLATFORM =~ /win32/i
  js_cmd = 'cscript'
  runjshint_ext = 'wsf'
  plugin_path = File.join(ENV['HOME'], 'vimfiles')
else
  if ENV['JS_CMD']
    js_cmd = ENV['JS_CMD']
  else
    js_cmd = 'js'
  end
  runjshint_ext = 'js'
  plugin_path = File.join(ENV['HOME'], '.vim')
end

Dir.chdir(File.join(plugin_path, 'ftplugin', 'javascript', 'jshint')) do |dir|
  IO.popen("#{js_cmd} runjshint.#{runjshint_ext}", 'r+') do |jshint|
    jshint.write(File.open(target, 'r') { |f| f.read })
    jshint.close_write
    $stdout.write(jshint.read)
  end
end
